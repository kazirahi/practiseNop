@using Nop.Web.Framework.Models.DataTables
@using Nop.Plugin.Widgets.Banner.Models
@model Nop.Plugin.Widgets.Banner.Models.BannerSearchModel
@inject Nop.Core.Domain.Common.AdminAreaSettings adminAreaSettings
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="WidgetsBanner" asp-action="List" method="post" id="banner-instore-form">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                @await Html.PartialAsync("Table", new DataTablesModel
                {
                Name = "banner-points-grid",
                UrlRead = new DataUrl("GetAllData", "WidgetsBanner", null),
                UrlDelete = new DataUrl("Delete", "WidgetsBanner", null),
                Length = Model.PageSize,
                LengthMenu = Model.AvailablePageSizes,
                ColumnCollection = new List<ColumnProperty>
                {
                new ColumnProperty(nameof(BannerModel.PictureUrl))
                {
                Title = T("Plugins.Widgets.Banner.Field.Image").Text,
                Width = "50",
                ClassName = NopColumnClassDefaults.ChildControl,
                Render = new RenderPicture()
                },
                new ColumnProperty(nameof(BannerModel.BannerName))
                {
                Title = T("Plugins.Widgets.Banner.Field.BannerName").Text,
                Width = "200"
                },
                new ColumnProperty(nameof(BannerModel.BannerDescription))
                {
                Title = T("Plugins.Widgets.Banner.Field.BannerDescription").Text,
                Width = "100"
                },
                new ColumnProperty(nameof(BannerModel.Link))
                {
                Title = T("Plugins.Widgets.Banner.Field.Link").Text,
                Width = "100"
                },
                new ColumnProperty(nameof(BannerModel.LinkName))
                {
                Title = T("Plugins.Widgets.Banner.Field.LinkName").Text,
                Width = "100"
                },
                new ColumnProperty(nameof(BannerModel.DisplayOrder))
                {
                Title = T("Plugins.Widgets.Banner.DisplayOrder").Text,
                Width = "100"
                },
                new ColumnProperty(nameof(BannerModel.Published))
                {
                Title = T("Plugins.Widgets.Banner.Published").Text,
                Width = "100"
                },
                new ColumnProperty(nameof(BannerModel.Id))
                {
                Title = T("Admin.Common.Edit").Text,
                ClassName = NopColumnClassDefaults.Button,
                Width = "100",
                Render = new RenderCustom("renderColumnEdit")
                },
                new ColumnProperty(nameof(BannerModel.Id))
                {
                Title = T("Admin.Common.Delete").Text,
                ClassName = NopColumnClassDefaults.Button,
                Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                Width = "100"
                }
                }
                })
            </div>

            <script>
                function renderColumnEdit(data, type, row, meta) {
                    return '<button onclick=\"javascript:OpenWindow(\'@Url.Content("~/Admin/WidgetsBanner/Edit/")' + data + '?btnId=btnRefresh&formId=banner-instore-form\', 800, 800, true); return false;\" class="btn btn-default"><i class="fas fa-pencil-alt"></i>@T("Admin.Common.Edit").Text</button>';
                }
            </script>

            <div class="card-footer">
                <button type="submit" id="btnAddNewOption" name="save" class="btn btn-primary" onclick="javascript:OpenWindow('@(Url.Action("Create", "WidgetsBanner",  new { btnId = "btnRefresh", formId = "banner-instore-form" }))', 800, 800, true); return false;">@T("Plugins.Widgets.Banner.AddNew")</button>

                <button id="btnRefresh" type="submit" name="save" class="btn btn-default" style="display: none"></button>
            </div>
            <script>
                $(document).ready(function () {
                    $('#btnRefresh').click(function () {
                        //refresh grid
                        updateTable('#banner-points-grid');

                        //return false to don't reload a page
                        return false;
                    });
                });
            </script>
        </div>
    </div>
</form>